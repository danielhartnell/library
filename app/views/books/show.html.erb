<div class="container">
  <br/>
  <p id="notice" class="bg-success"><%= notice %></p>
  <h1><%= @book.title %></h1>
  <img src="<%= @book.photo_url %>">
  <br/><br/>
  <p>
    <strong>Isbn:</strong>
    <%= @book.isbn %>
  </p>

  <p>
    <strong>Author:</strong>
    <%= @book.author %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @book.description %>
  </p>

  <p>
    <strong>Location:</strong>
    <%= @book.location %>
  </p>
  <%= link_to 'Edit', edit_book_path(@book), :class => "btn btn-primary" %>
