<form class="form-horizontal">
  <%= form_for(@book) do |f| %>
    <% if @book.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

        <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
      <% end %>
      <div class="form-group">
        <%= f.label :isbn, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :isbn, :class => 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :photo_url, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :photo_url, :class => 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :title, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :title, :class => 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :author, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :author, :class => 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :description, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_area :description, :class => 'form-control', :rows => '5' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :location, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :location, :class => 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :checkout, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.check_box :checkout, :class => 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :nerd, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :nerd, :class => 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.submit 'Save', :class => 'btn btn-primary col-sm-2' %>
      </div>
    </div>
  <% end %>
</form>